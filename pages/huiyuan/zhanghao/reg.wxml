<form bindsubmit="zhuce">
  <view class="denglu">
    <text class="shuoming">请输入您注册的会员账号</text>
    <view class="form-wrap">
        <view class="flex-wap input-wrap">
            <text class="label">手机号码</text>
            <input value=""  name="username"  class="account-info-input" />
        </view>
        <view class="flex-wap input-wrap">
            <text class="label">设置密码</text>
            <input value=""  name="password1" type="password" class="account-info-input" />
        </view>
        <view class="flex-wap input-wrap">
            <text class="label">确认密码</text>
            <input value=""  name="password2" type="password" class="account-info-input" />
        </view>
    </view> 
    <text wx:if="{{error}}" class="myred">{{error}}</text>
    <text class="shuoming">请准确填写账号信息，有问题联系客服</text>
    <button class="mysubmit" type="primary" form-type="submit">注册账号</button>
  </view>
</form>
