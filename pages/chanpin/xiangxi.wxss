@import "/wxParse/wxParse.wxss";
.swiper-tab{
  width: 100%;
  border-bottom: 1px solid gray;
  text-align: center;
  line-height: 32px;
  height: 32px;
  box-sizing: border-box;
}
.swiper-tab-list{
  color: gray;
  float: left;
  width: 33%;
  height: 28px;
}
.on{
  color: tomato;
  border-bottom:3px solid tomato ;
}
.swiper-box{
  width: 100%;
  height: 100%;
  display: block;
  overflow: scroll;
}

.swiimg{
  width: 100%;
  height: 100%;
}
.biaoti{
  padding: 10px;
}
.biaoti01{
  font-size: 16px;
}
.biaoti02{
  color: red;
  font-size: 12px;
}
.biaoti03{
  color: gray;
  font-size: 13px;
}
.huise{
  background-color: #eee;
  min-height: 5px;
}
.huiyuan{
  padding: 10px;
  display: flex;
}
.huiyuan-dengji{
  width: 30%;
  background-color: orange;
  color: #fff;
  border-radius: 5px;
  display: flex;
  justify-content: center;
}
.huiyuan-jiage{
  width: 70%;
  display: flex;
  justify-content: flex-end;
}
.xiaoshou{
  padding: 10px;
}

/* 底部菜单 */
.dibu{
  position: fixed;
  bottom: 0;
  height: 44px;
  width: 100%;
  line-height: 44px;
  color: gray;
  border-top: 1px solid #ddd;
  background-color: #fff;
  text-align: center;
}
.navs{
  display: flex;
}
.nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav-item text{
  font-size: 12px;
  margin-top: -12px;
}
.nav-img{
  width: 22px;
  height: 22px;
}
.bt01{
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: darkorange;
  font-size: 13px;
  border-radius: 0;
  color: #fff;
}
.bt02{
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: tomato;
  font-size: 13px;
  border-radius: 0;
  color: #fff;
}
/* 五星打分 */
.star-image{
  position: absolute;
  top: 30px;
  width: 50px;
  height: 50px;
  src: "/images/star.png";
  z-index: 999;
}
.pinglun{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  font-size: 14px;
}
.pinglun-biaoti{
  line-height: 30px;
  padding: 5px;
}
.pinglun-neirong{
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
  padding: 5px;
  margin-top: 46px;
  height: 70px;
}
.pinglun-tijiao{
  background-color: orange;
  color:#fff;
  margin-top: 10px;
  width: 90%;
}
.pl{
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
  display: flex;
  flex-direction: column;
  padding: 5px;
  margin-top: 10px;
}
.pl-yonghu{
  display: flex;
  border-bottom: 1px dashed gainsboro;
  line-height: 30px;
}
.pl-nicheng{
  flex-grow: 1;
  font-size:14px;
}
.pl-shijian{
  font-size:12px;
  color: gray;
}
.pl-xx{
  font-size: 14px;
}
.pl-img{
  width: 15px;
  height: 15px;
  margin-top: -4px;
  vertical-align: middle;
}
.pl-neirong{
  color: gray;
  font-size: 12px;
}